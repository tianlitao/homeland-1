<%= form_for [:admin,@task] do |f| %>
  <%= render 'shared/error_messages', target: @task %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, options_for_select(Task::CATEGORY.to_a.map(&:reverse)), {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit t("common.save"), class: "btn btn-primary", 'data-disable-with' => t("common.saving") %>
    <%= link_to t("common.cancel"), admin_nodes_path, class: "btn btn-secondary" %>
  </div>
<% end %>
